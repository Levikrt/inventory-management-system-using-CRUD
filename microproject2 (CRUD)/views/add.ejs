<html lang="en">
    <head>
        <meta charset="utf-8">
  
        <title>Fashion Website</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
      
        <!-- Font Awesome -->
        <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="/dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
    <body>
        <h4 class="c1">Add a new product</h4>
        <form action="/AddData" method="POST">
            <label>
                Product Id:
            </label>
            <input type="number" placeholder="Enter Product ID" name="pid"><br>
            <label> Product Category</label>&nbsp;
            <input type="text" placeholder="Enter category" name="category"><br>
            <label>Type of Product</label>&nbsp;
            <input type="text" placeholder="Enter Type" name="type"><br>
            <label>Size: </label>
            <input type="number" placeholder="Enter Size" name="size"><br>
            <label>Stock:</label>&nbsp;
            <input type="number" placeholder="Enter quantity" name="stock"><br>
            <label>Cost Price: </label>&nbsp;
            <input type="number" placeholder="Enter cost" name="cp"><br>
            <label>Selling Price: </label>&nbsp;
            <input type="number" placeholder="Enter SP" name="sp"><br>
            <button type ="submit">Submit</button>
        </form>
        <a href="/" class="c2">Home Page</a>
    </body>
</html>